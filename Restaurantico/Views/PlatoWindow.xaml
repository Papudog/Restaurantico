<Window x:Class="PlatoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Restaurantico"
        mc:Ignorable="d"
        Title="PlatoPage" Height="360" Width="300"
        AllowsTransparency="true"
WindowStartupLocation="Manual" 
WindowStyle="None"
Background="Transparent"
        >
    <Grid>
        <Border CornerRadius="10" Background="#FF0A112A" BorderBrush="#FF317CA1" BorderThickness="4" Padding="5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="180"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                </Grid.RowDefinitions>
                
                <StackPanel Grid.Column="0">
                    <StackPanel Orientation="Vertical">
                        <Label Foreground="White" FontSize="16" HorizontalAlignment="Center" Content="Menú de platos"/>
                        <ListBox Background="#FF070C1D" BorderBrush="#FF65A3DE" Height="130" Margin="10" Name="ListBoxPlatos" SelectedItem="{Binding SelectedPlato, Mode=TwoWay}" ItemsSource="{Binding Platos}">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Vertical">
                                        <TextBlock Foreground="White" Text="{Binding Nombre}" FontWeight="Bold"/>
                                        <TextBlock Foreground="White" Text="{Binding Precio}"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </StackPanel>
                </StackPanel>


                <StackPanel Grid.Row="1" Grid.Column="0" Margin="20 20">
                    <StackPanel Orientation="Vertical">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="65"></ColumnDefinition>
                                <ColumnDefinition Width="130"></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <Label Grid.Column="0" Foreground="White" FontSize="14" VerticalAlignment="Center" Content="Nombre"/>
                            <Border Grid.Column="1" CornerRadius="5" BorderBrush="#FF65A3DE" Background="#FF070C1D" BorderThickness="1" Margin="0 10">
                                <TextBox Foreground="White" Text="{Binding SelectedPlato.Nombre}" x:Name="TextNombre" FontSize="14" VerticalAlignment="Center" Background="Transparent" BorderBrush="Transparent" />
                            </Border>
                        </Grid>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="65"></ColumnDefinition>
                                <ColumnDefinition Width="130"></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <Label Grid.Column="0" Foreground="White" FontSize="14" VerticalAlignment="Center" Content="Precio"/>

                            <Border Grid.Column="1" CornerRadius="5" BorderBrush="#FF65A3DE" Background="#FF070C1D" BorderThickness="1" Margin="0 10">
                                <TextBox Foreground="White" Text="{Binding SelectedPlato.Precio}" x:Name="TextPrecio" FontSize="14" VerticalAlignment="Center" Background="Transparent" BorderBrush="Transparent" />
                            </Border>

                        </Grid>

                        <Grid HorizontalAlignment="Center" Margin="0 10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"></ColumnDefinition>
                                <ColumnDefinition Width="100"></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            
                            <Button Grid.Column="0" x:Name="ButtonGuardar" Click="ButtonGuardar_Click" Content="Agregar" Margin="0,0,10,0"/>
                            <Button Grid.Column="1" x:Name="ButtonEliminar" Click="ButtonEliminar_Click" Content="Eliminar" Margin="0,0,10,0"/>
                        </Grid>
                    </StackPanel>
                </StackPanel>
            </Grid>

        </Border>
    </Grid>
</Window>
