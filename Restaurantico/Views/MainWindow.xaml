<Window x:Class="MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Restaurantico"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <DockPanel  LastChildFill="true">
            <Border Background="Aquamarine" Height="70" DockPanel.Dock="Top">
                <StackPanel Orientation="Horizontal" VerticalAlignment="center" Margin="50, 0">
                    <TextBlock FontSize="30" Text="Resturante Los Papus"/>
                </StackPanel>
            </Border>

            <Border Background="Azure" Width="200" DockPanel.Dock="Left">
                <StackPanel Orientation="Vertical">
                    <ToggleButton x:Name="SidebarToggle" Content="☰ Menu" Width="200" Height="40" Click="SidebarToggle_Click"/>
                    <StackPanel x:Name="SidebarMenu" Orientation="Vertical" Visibility="Visible">
                        <Button Content="Platos" Height="40"/>
                        <Button Content="Meseros" Height="40"/>
                        <Button Content="Clientes" Height="40"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <Grid>
                <DockPanel LastChildFill="true">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" DockPanel.Dock="Left" Width="300">
                        <StackPanel Width="300" Orientation="Vertical">
                            <Label FontSize="18" HorizontalAlignment="Center" Margin="0 10">Menu de platos</Label>

                            <ListBox Width="200" Height="250" Margin="10" Name="ListBoxPlatos" ItemsSource="{Binding Platos}">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Vertical">
                                            <TextBlock Text="{Binding Nombre}" FontWeight="Bold"/>
                                            <TextBlock Text="{Binding Precio}"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </StackPanel>
                    </StackPanel>
                    <DockPanel LastChildFill="true" Margin="20 20">
                        <StackPanel Orientation="Vertical" DockPanel.Dock="Top">
                            <Label FontSize="20" HorizontalAlignment="center" Margin="0 10">Acciones</Label>
                        </StackPanel>

                        <StackPanel Orientation="Vertical">
                            <StackPanel Orientation="Vertical">
                                <Label FontSize="18" HorizontalAlignment="Center" Content="Nombre del plato"/>
                                <TextBox Text="" x:Name="TextNombre" FontSize="18" BorderBrush="Black" Margin="0 10"/>
                            </StackPanel>

                            <StackPanel Orientation="Vertical">
                                <Label FontSize="18" HorizontalAlignment="Center" Content="Precio del plato"/>
                                <TextBox Text="" x:Name="TextPrecio" FontSize="18" BorderBrush="Black" Margin="0 10"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0 10">
                                <Button x:Name="ButtonGuardar" Click="ButtonGuardar_Click" Content="Guardar" Margin="0,0,10,0"/>
                                <Button x:Name="ButtonEliminar" Click="ButtonEliminar_Click" Content="Eliminar" Margin="0,0,10,0"/>
                                <Button x:Name="ButtonLimpiar" Click="ButtonLimpiar_Click" Content="Limpiar"/>
                            </StackPanel>
                        </StackPanel>
                    </DockPanel>
                </DockPanel>
            </Grid>
        </DockPanel>
    </Grid>
</Window>
