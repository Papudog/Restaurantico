<Window x:Class="MeseroWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Restaurantico"
        mc:Ignorable="d"
        Title="MeseroWindow" Height="250" Width="400"
        AllowsTransparency="true"
        WindowStartupLocation="CenterScreen" 
        WindowStyle="None"
        Background="Transparent"
        >
    <Grid>
        <Border CornerRadius="10" Background="#FF0A112A" BorderBrush="Transparent" BorderThickness="1" Padding="5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <StackPanel Height="250">
                        <Label Foreground="White" Content="Lista de meseros" HorizontalAlignment="Center"/>
                        <ListBox Height="150" Width="180" Background="#FF070C1D" BorderBrush="#FF65A3DE" SelectedItem="{Binding SelectedMesero, Mode=TwoWay}" ItemsSource="{Binding Meseros}">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel>
                                        <TextBlock Text="{Binding Nombre}"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </StackPanel>
                </StackPanel>
                <StackPanel Grid.Column="1">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="65"></ColumnDefinition>
                            <ColumnDefinition Width="100"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Label Grid.Column="0" Foreground="White" FontSize="14" VerticalAlignment="Center" Content="Nombre"/>
                        <Border Grid.Column="1" CornerRadius="5" BorderBrush="#FF65A3DE" Background="#FF070C1D" BorderThickness="1" Margin="0 10">
                            <TextBox Foreground="White" Text="{Binding SelectedPlato.Nombre}" x:Name="TextNombre" FontSize="14" VerticalAlignment="Center" Background="Transparent" BorderBrush="Transparent" />
                        </Border>
                    </Grid>
                </StackPanel>
            </Grid>

        </Border>

    </Grid>
</Window>
